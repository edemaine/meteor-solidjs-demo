{
  "name": "solid-meteor-demo",
  "private": true,
  "scripts": {
    "start": "meteor run",
    "test": "tsc",
    "test-mocha-notyet": "meteor test --once --driver-package meteortesting:mocha",
    "test-app-notyet": "TEST_WATCH=1 meteor test --full-app --driver-package meteortesting:mocha",
    "visualize": "meteor --production --extra-packages bundle-visualizer"
  },
  "dependencies": {
    "@babel/runtime": "7.16.7",
    "meteor-node-stubs": "1.1.0",
    "solid-js": "1.3.3",
    "solid-meteor-data": "0.5.2",
    "solid-refresh": "github:edemaine/solid-refresh#warn-if-not-dev"
  },
  "devDependencies": {
    "@types/meteor": "2.0.3",
    "@types/node": "17.0.8",
    "babel-preset-solid": "1.3.2",
    "typescript": "4.5.4",
    "typings": "2.1.1"
  },
  "meteor": {
    "mainModule": {
      "client": "client/main.tsx",
      "server": "server/main.tsx"
    },
    "testModule": "tests/main.js"
  },
  "solid": {
    "ssr": true,
    "verbose": true,
    "ignore": [
      "**/*.[tj]s"
    ]
  },
  "babel": {
    "env": {
      "development": {
        "plugins": [
          [
            "solid-refresh/babel"
          ]
        ]
      }
    }
  }
}
